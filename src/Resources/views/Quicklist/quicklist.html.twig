<div class="box">
    <div class="box-header"><h3 class="box-title">{{ 'Quicklist'|trans }}</h3></div>
    <div class="box-body">
        <table class="table table-bordered table-collapsed">
            <tbody>
            {% for repo in repos %}
                <tr>
                    <th>
                        {{ repo.label|trans }}
                    </th>
                    <td>
                        {{ form_start(repo.form) }}
                        {{ form_widget(repo.form) }}
                        {{ form_end(repo.form) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
