<html>
    <head>
        <meta charset="UTF-8">
        <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

        <title>Zicht CMS | login</title>

        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('bundles/zichtadmin/style/login.css') }}">
    </head>
    <body>
    <div>
        <form action="{{ path('zicht_admin_login_check') }}" method="post" class="c-loginform">
            <div>
                <h2>Zicht CMS | login</h2>
                <div>
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                </div>

                <input type="text" id="username" class="form-control" name="_username" placeholder="Gebruikersnaam" value="{{ last_username }}" />
                <input type="password" id="password" name="_password" placeholder="Wachtwoord" class="form-control  c-loginform__field" /><br>

                <input type="checkbox" id="remember_me" name="_remember_me" checked />
                <label for="remember_me">Onthoud mij</label>

                <button class="btn btn-lg btn-primary btn-block" type="submit">Inloggen</button>
                <br><br>
                <a href="/">&leftarrow;terug naar website</a>
            </div>
        </form>
    </body>
</html>